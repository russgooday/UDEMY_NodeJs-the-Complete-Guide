<%- include('../includes/head.ejs') %>
    </head>
    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (items?.length > 0) { %>
                <section class='cart-items'>
                    <table>
                        <thead>
                            <tr>
                                <th>Item</th>
                                <th>Price</th>
                                <th>Quantity</th>
                            </tr>
                        </thead>
                        <tbody>
                        <% for (let item of items) { %>
                            <tr>
                                <td><%- item.title %></td>
                                <td><%- item.price %></td>
                                <td><%- item.quantity %></td>
                            </tr>
                        <% } %>
                        </tbody>
                        <tfoot>
                            <tr>
                                <td>Total:</td>
                                <td><%- (totalPrice).toFixed(2) %></td>
                            </tr>
                            <tr>

                            </tr>
                        </tfoot>
                    </table>
                </section>
            <% } else { %>
                <h1>Cart is Empty!</h1>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>