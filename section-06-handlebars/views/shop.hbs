<main>
    <div class="grid">
        {{#if (hasLength products)}}
        {{#each products}}
        <article class="card product-item">
            <header class="card-header">
                <h1 class="product-title">{{this.title}}</h1>
            </header>
            <div class="card-image">
                <img src="/images/book-1296045_960_720.png" alt="A Book"/>
            </div>
            <div class="card-content">
                <h2 class="product-price">$19.99</h2>
                <p class="product-description">A very interesting book about so many even more interesting things!</p>
            </div>
            <div class="card-actions">
                <button class="btn">Add to Cart</button>
            </div>
        </article>
        {{/each}}
        {{else}}
        <h1>No Products Found!</h1>
        {{/if}}
    </div>
</main>